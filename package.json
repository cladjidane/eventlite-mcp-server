{
  "name": "eventlite-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for EventLite - Manage events and registrations with Claude",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "eventlite-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "build:binary": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:windows-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile=bin/eventlite-mcp-darwin-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile=bin/eventlite-mcp-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile=bin/eventlite-mcp-linux-x64",
    "build:windows-x64": "bun build src/index.ts --compile --target=bun-windows-x64 --outfile=bin/eventlite-mcp-windows-x64.exe"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "eventlite",
    "events",
    "registrations",
    "ai"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cladjidane/eventlite-mcp-server.git"
  },
  "author": "EventLite",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "sharp": "^0.34.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
